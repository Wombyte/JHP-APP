<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="5dp"
    tools:context="mc.wombyte.marcu.jhp_app.Grade_listview_adapter">

    <TextView
        android:id="@+id/tv_date_listview_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="1dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_short_description_listview_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_date_listview_grade"
        android:layout_toEndOf="@+id/tv_grade_listview_grade"
        android:paddingBottom="1dp"
        android:paddingEnd="2dp"
        android:paddingStart="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_grade_listview_grade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_long_description_listview_grade"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_date_listview_grade"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_long_description_listview_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_short_description_listview_grade"
        android:layout_toEndOf="@+id/tv_grade_listview_grade"
        android:paddingEnd="2dp"
        android:paddingStart="5dp" />

</RelativeLayout>