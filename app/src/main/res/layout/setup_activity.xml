<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/container_setup_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_container_setup_activity">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_container_setup_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_back_setup_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:paddingBottom="6dp"
            android:text="@string/first_use_back"
            android:textColor="@color/first_use_back"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_next_setup_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:paddingBottom="6dp"
            android:text="@string/first_use_next"
            android:textColor="@color/first_use_next"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>