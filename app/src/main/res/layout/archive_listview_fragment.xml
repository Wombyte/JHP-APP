<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:paddingEnd="24dp"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/checkbox_listview_archive"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="25dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tv_name_listview_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingStart="8dp"
        android:layout_toEndOf="@id/checkbox_listview_archive"
        android:textColor="@color/colorPrimary"
        android:layout_toStartOf="@+id/image_subjects_listview_archive"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/image_subjects_listview_archive"
        android:layout_toStartOf="@id/tv_subjects_listview_archive"
        android:background="@drawable/symbol_archive_subjects"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_subjects_listview_archive"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        android:layout_toStartOf="@id/image_average_listview_archive" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/image_average_listview_archive"
        android:layout_toStartOf="@id/tv_average_listview_archive"
        android:background="@drawable/symbol_average"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        android:id="@+id/tv_average_listview_archive"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>