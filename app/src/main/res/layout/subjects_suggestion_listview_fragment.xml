<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_subject_suggestion_listview"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/sym_color_subject_suggestion_listview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/subjects_color_gridview_background" />

    <TextView
        android:id="@+id/tv_name_subject_suggestion_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:layout_marginStart="24dp"/>

</LinearLayout>