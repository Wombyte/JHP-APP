<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingStart="10dp"
    android:paddingEnd="5dp"
    android:paddingTop="20dp"
    android:paddingBottom="1dp">

    <TextView
        android:id="@+id/tv_subject_grades_pl_list"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:background="@drawable/number_picker_sub_button"
        android:paddingStart="0dp"
        android:paddingEnd="6dp"
        android:textColor="@color/background"
        android:gravity="end|center_vertical"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"/>

    <mc.wombyte.marcu.jhp_app.Grade_horizontal_list
        android:id="@+id/grade_list_grades_pl_list"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:paddingStart="0dp"
        android:paddingEnd="1dp"
        android:layout_toEndOf="@id/tv_subject_grades_pl_list"
        android:layout_toStartOf="@id/b_diagram_grades_pl_list"
        android:gravity="center_vertical"
        android:background="@drawable/number_picker_border">

    </mc.wombyte.marcu.jhp_app.Grade_horizontal_list>

    <Button
        android:id="@+id/b_diagram_grades_pl_list"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:background="@color/background"
        android:paddingStart="6dp"
        android:paddingEnd="0dp"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:gravity="start|center_vertical"
        android:textColor="@color/background"/>

</RelativeLayout>
