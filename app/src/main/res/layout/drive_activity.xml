<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mc.wombyte.marcu.jhp_app.DriveActivity">

<Button
    android:id="@+id/createfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Create a file on Google Drive"
    android:onClick="onClickCreateFile"/>

<Button
    android:id="@+id/openfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open file from Google Drive"
    android:onClick="onClickOpenFile"/>

</LinearLayout>