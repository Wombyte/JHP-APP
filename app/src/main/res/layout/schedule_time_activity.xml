<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/toolbar_schedule_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heading"
        android:clipToPadding="false"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:elevation="5dp"
        android:translationZ="2dp">

        <ImageButton
            android:id="@+id/b_back_schedule_time"
            style="@style/NoShadow"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/symbol_back"/>

        <TextView
            android:id="@+id/tv_heading_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/b_back_schedule_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b_back_schedule_time"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="5dp"
            android:paddingTop="4.5dp"
            android:paddingBottom="4.5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_container_schedule_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbar_schedule_time"
        android:paddingTop="10dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:translationZ="11dp">

    </RelativeLayout>

</RelativeLayout>