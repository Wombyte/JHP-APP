<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/textarea_border">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/colorAccent"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:left="2dp"
        android:bottom="2dp"
        android:right="2dp">
        <shape>
            <solid
                android:color="@color/background"/>
            <corners
                android:radius="8dp"/>
        </shape>
    </item>
</layer-list>